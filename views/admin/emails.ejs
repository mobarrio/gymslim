<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Emails</title>
    <link rel="stylesheet" href="/css/style.css">
    <style> body { padding-top: 50px; } .container { max-width: 900px; }</style>
</head>
<body>
    <%- include('../partials/_nav') %>

    <div class="container">
        <h1>Gestión de Emails de Reserva</h1>
        <p><a href="/admin/users">Gestionar Usuarios</a></p>

        <% if (locals.message) { %><div class="info-msg"><%= message %></div><% } %>
        <% if (locals.error) { %><div class="error-msg"><%= error %></div><% } %>

        <!-- Formulario para añadir nuevo email -->
        <form action="/admin/emails/new" method="POST" class="form-container" style="max-width: 500px; margin-bottom: 30px;">
            <h3>Añadir Nuevo Email</h3>
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <button type="submit" class="btn-primary">Guardar Email</button>
        </form>

        <!-- Lista de emails existentes -->
        <h3>Emails Guardados</h3>
        <table>
            <tr>
                <th>Email</th>
                <th>Por Defecto</th>
                <th style="width: 200px;">Acciones</th>
            </tr>
            <% emails.forEach(e => { %>
                <tr>
                    <td><%= e.email %></td>
                    <td><%= e.isDefault ? 'Sí' : 'No' %></td>
                    <td>
                        <% if (!e.isDefault) { %>
                            <form action="/admin/emails/<%= e.id %>/set-default" method="POST" style="display: inline-block; margin-right: 10px;">
                                <button type="submit" class="sesion-link">Poner por Defecto</button>
                            </form>
                            <form action="/admin/emails/<%= e.id %>/delete" method="POST" style="display: inline-block;">
                                <button type="submit" class="sesion-link" style="color: #dc3545;" onclick="return confirm('¿ELIMINAR <%= e.email %>?')">Eliminar</button>
                            </form>
                        <% } else { %>
                            (Email por defecto)
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>
